set $mod Mod1
set $super Mod4

font pango:Sans Bold 10
title_align center

default_border none
gaps inner 10
smart_gaps on

bindsym $super+e exec thunar
bindsym $super+t exec okular

bindsym Print exec flameshot gui
bindsym Control+Print exec flameshot full -c

# XF86 binding
bindsym XF86Explorer exec thunar
bindsym XF86Search exec --no-startup-id dmenu_run
bindsym XF86HomePage exec firefox
bindsym XF86AudioPlay exec --no-startup-id playerctl --player=cmus play-pause
bindsym XF86AudioPrev exec --no-startup-id playerctl --player=cmus previous
bindsym XF86AudioNext exec --no-startup-id playerctl --player=cmus next
bindsym Mod1+Control+minus exec --no-startup-id playerctl --player=cmus volume 0.05-
bindsym Mod1+Control+equal exec --no-startup-id playerctl --player=cmus volume 0.05+

bindsym Mod1+Control+c exec --no-startup-id playerctl --player=cmus stop
bindsym Mod1+Control+s exec --no-startup-id playerctl --player=cmus play-pause
bindsym Mod1+Control+x exec --no-startup-id playerctl --player=cmus pause
bindsym Mod1+Control+z exec --no-startup-id playerctl --player=cmus previous
bindsym Mod1+Control+a exec --no-startup-id playerctl --player=cmus next

