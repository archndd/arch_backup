# {{{ battery
[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1

full-at = 95

time-format = %H:%M
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.cyan}
format-charging-underline = ${colors.yellow}
format-full-underline = ${colors.yellow}
label-discharging = %percentage:2%% %time%
label-charging =  %percentage:2%% %time%
label-full =  %percentage:2%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
# }}}
