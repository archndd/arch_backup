# {{{ mybar
[bar/mybar]
width = 100%
height = 25
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = false
bottom=true

dpi-x = 96
dpi-y = 96

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 0

font-0 = Source Code Pro:size=11
font-1 = NotoEmoji:scale=10:antialias=false
font-2 = fontawesome:pixelsize=10
font-3 = JetBrains Mono Nerd Font:monospace:size=10

modules-left = i3
modules-right = pulseaudio backlight redshift cpu ram-memory date battery ibus 

tray-position = right
tray-padding = 2

wm-restack = i3
scroll-up = i3.next
scroll-down = i3.prev
# }}}
[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

# {{{ i3
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
enable-click = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.blue}

# ws-icon-0 = 1;♚
# ws-icon-1 = 2;♛
# ws-icon-2 = 3;♜
# ws-icon-3 = 4;♝
# ws-icon-4 = 5;♞
# ws-icon-default = ♟

; focused = Active workspace on focused monitor
label-focused = %name%
# label-focused-background = ${colors.red}
label-focused-underline= ${colors.blue}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %name%
; label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.black}
label-urgent-padding = 1
# }}}
# {{{ ibus
[module/ibus]
type = custom/script
exec = ibus engine | awk '/Bamboo/ { print "VI" } /eng/ { print "EN" }'
interval = 0.5
format-prefix = " "
format-prefix-foreground = ${colors:red-lighter}
format-underline = ${colors.green}
click-left = sh ~/.config/polybar/ibus-change-engine.sh
# }}}
