! -------------------------------------------------------------------
! Xft settings
! -------------------------------------------------------------------
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
! hintstyle: hintnone, hintslight, hintmedium, hintfull.
Xft.hintstyle:  hintfull
Xft.autohint:   false
Xft.lcdfilter:  lcddefault

! -------------------------------------------------------------------
! URxvt Settings
! -------------------------------------------------------------------
! Set $TERM
*.termName: rxvt-unicode-256color
*.visualBell: false
*.depth: 32
*.transparent: false
*.fading: 0
*.loginShell: false
*.utmpInhibit: true
*.savelines: 5000
! Internal Border: the padding inside urxvt instance
*.internalBorder: 5
*.externalBorder: 0

!! Colorscheme

! special
*.foreground: #a6accd
*.background: #292d3e
*.cursorColor: #a6accd

! black
*.color0: #333747
*.color8: #434758

! red
*.color1: #f07178
*.color9: #ff8b92

! green
*.color2: #c3e88d
*.color10: #ddffa7

! yellow
*.color3: #ffcb6b
*.color11: #ffe585

! blue
*.color4: #82aaff
*.color12: #9cc4ff

! magenta
*.color5: #c792ea
*.color13: #e1acff

! cyan
*.color6: #89ddff
*.color14: #a3f7ff

! white
*.color7: #ffffff
*.color15: #ffffff

!! Font
*.allow_bold: true
*.font: xft:SauceCodePro Nerd Font:size=13:antialias=true:hinting=true
!*.boldFont: xft:Source Code Pro:bold:size=13:antialias=true:hinting=true
*.letterSpace: -1
*.lineSpace: -1

!! Cursor
*.cursorBlink: true
*.cursorUnderline: false

!! Pointer
*.pointerBlank: false

!! Scrollbar
*.scrollstyle: rxvt
*.scrollBar: fasle
*.scrollBar_right: false
*.urgentOnBell: true

! do not scroll with output
*.scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
*.scrollWithBuffer: true
! scroll back to the bottom on keypress
*.scrollTtyKeypress: true

! scrollback one line
*.keysym.Shift-Up: command:\033]720;1\007
*.keysym.Shift-Down: command:\033]721;1\007

! Disable keycap picture mode (ctrl+shift binding)
*.iso14755: false
*.iso14755_52: false

! Ctrl+Shift+ V or C to paste and copy
*.keysym.Shift-Control-V: eval:paste_clipboard
*.keysym.Shift-Control-C: eval:selection_to_clipboard
! Disable previous paste and copy key
*.keysym.Control-Meta-c: builtin-string:
*.keysym.Control-Meta-v: builtin-string:

! -------------------------------------------------------------------
! Perl extensions
! -------------------------------------------------------------------
*.perl-ext-common: default,matcher,clipboard,resize-font,fullscreen,searchable-scrollback

!! Font size
! Resize font
*.keysym.Control-down:  resize-font:smaller
*.keysym.Control-up:    resize-font:bigger
*.keysym.Control-minus:  resize-font:smaller
*.keysym.Control-equal:  resize-font:bigger
*.keysym.Control-plus:  resize-font:reset

!! Fullscreen
*.keysym.F11: perl:fullscreen:switch

!! Searchable scrollback
*.searchable-scrollback: Control-s

!! Open URLS in firefox
*.url-launcher: /usr/bin/firefox
*.colorUL: #ff6600
*.matcher.button: 1
