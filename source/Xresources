! -------------------------------------------------------------------
! Xft settings
! -------------------------------------------------------------------
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
! hintstyle: hintnone, hintslight, hintmedium, hintfull.
Xft.hintstyle:  hintfull
Xft.autohint:   false
Xft.lcdfilter:  lcddefault

! -------------------------------------------------------------------
! URxvt Settings
! -------------------------------------------------------------------
! Set $TERM
URxvt.termName: rxvt-unicode-256color
URxvt.visualBell: false
URxvt.depth: 32
URxvt.transparent: false
URxvt.fading: 0
URxvt.loginShell: false
URxvt.utmpInhibit: true
URxvt.savelines: 5000
! Internal Border: the padding inside urxvt instance
URxvt.internalBorder: 5
URxvt.externalBorder: 0

!! Colorscheme

! special
URxvt.foreground: #a6accd
URxvt.background: #292d3e
URxvt.cursorColor: #a6accd

! black
URxvt.color0: #333747
URxvt.color8: #434758

! red
URxvt.color1: #f07178
URxvt.color9: #ff8b92

! green
URxvt.color2: #c3e88d
URxvt.color10: #ddffa7

! yellow
URxvt.color3: #ffcb6b
URxvt.color11: #ffe585

! blue
URxvt.color4: #82aaff
URxvt.color12: #9cc4ff

! magenta
URxvt.color5: #c792ea
