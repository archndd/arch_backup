! cyan
URxvt.color6: #89ddff
URxvt.color14: #a3f7ff

! white
URxvt.color7: #ffffff
URxvt.color15: #ffffff

!! Font
URxvt.allow_bold: true
URxvt.font: xft:Source Code Pro:size=13:antialias=true:hinting=true
!URxvt.boldFont: xft:Source Code Pro:bold:size=13:antialias=true:hinting=true
URxvt.letterSpace: -1
URxvt.lineSpace: -1

!! Cursor
URxvt.cursorBlink: true
URxvt.cursorUnderline: false

!! Pointer
URxvt.pointerBlank: false

!! Scrollbar
URxvt.scrollstyle: rxvt
URxvt.scrollBar: fasle
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true

! do not scroll with output
URxvt.scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt.scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt.scrollTtyKeypress: true

! scrollback one line
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! Disable keycap picture mode (ctrl+shift binding)
URxvt.iso14755: false
URxvt.iso14755_52: false

! Ctrl+Shift+ V or C to paste and copy
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
! Disable previous paste and copy key
URxvt.keysym.Control-Meta-c: builtin-string:
URxvt.keysym.Control-Meta-v: builtin-string:

! -------------------------------------------------------------------
! Perl extensions
! -------------------------------------------------------------------
URxvt.perl-ext-common: default,matcher,clipboard,resize-font,fullscreen,searchable-scrollback

!! Font size
! Resize font
URxvt.keysym.Control-down:  resize-font:smaller
URxvt.keysym.Control-up:    resize-font:bigger
URxvt.keysym.Control-minus:  resize-font:smaller
URxvt.keysym.Control-equal:  resize-font:bigger
URxvt.keysym.Control-plus:  resize-font:reset

!! Fullscreen
URxvt.keysym.F11: perl:fullscreen:switch

!! Searchable scrollback
URxvt.searchable-scrollback: Control-s

!! Open URLS in firefox
URxvt.url-launcher: /usr/bin/firefox
URxvt.colorUL: #ff6600
URxvt.matcher.button: 1
